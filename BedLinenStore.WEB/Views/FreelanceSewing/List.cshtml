@model IEnumerable<FreelanceSewing>

<link rel="stylesheet" href="~/css/table.css">

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog modal-dialog-centered"></div>
</div>

<div class="content">

    <div class="container">


        @if ((Model?.Count() ?? 0) == 0)
        {
            <h3 style="text-align:center">Нет заказов</h3>
        }
        else
        {
            <div class="table-responsive">

                <table class="table table-striped custom-table">
                    <thead>
                        <tr>

                            <th scope="col">Номер</th>
                            <th scope="col">Имя</th>
                            <th scope="col">Почта</th>
                            <th scope="col">Номер телефона</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>@item.Name</td>
                                <td>
                                    @item.Email
                                </td>
                                <td>@item.PhoneNumber</td>
                                <td><a asp-action="Delete" asp-route-id="@item.Id" class="more delete">Удалить</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        }
    </div>
</div>