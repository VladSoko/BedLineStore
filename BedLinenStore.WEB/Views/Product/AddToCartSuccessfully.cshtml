@model Product

<link rel="stylesheet" href="~/css/viewProduct.css"/>

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Успешно добавлено</h5>
        <a class="btn-close exit" data-bs-dismiss="modal" aria-label="Close"></a>
    </div>
    <div class="modal-body">
        <div class="viewProduct_main">
            <img src="@Model.MainInfo.ImagePath" alt="">

            <div class="viewProduct_main_text">
                <p class="viewProduct_main_text-name">@Model.MainInfo.Name</p>
                <p class="viewProduct_main_text-price">BYN @Model.Category.Price</p>
                <p class="viewProduct_main_text-description">@Model.Category.Description</p>
            </div>
        </div>
    </div>
</div>

<script>

    jQuery(document).ready(function (e) {
        $('.exit').on('click', function () {
            window.location.href = "/Product/List";
        });
        
    });

</script>